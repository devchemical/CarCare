# pnpm configuration
node-linker=hoisted
hoist-pattern[]=*@next/*
hoist-pattern[]=*@radix-ui/*
hoist-pattern[]=*@supabase/*
hoist-pattern[]=*@tailwindcss/*
hoist-pattern[]=*lucide-react*

# Enable strict peer dependencies checking
strict-peer-dependencies=false

# Faster installs
prefer-frozen-lockfile=true

# Registry settings
registry=https://registry.npmjs.org/

# Auto install peer dependencies
auto-install-peers=true

# Store directory (optional - uncomment if you want a custom location)
# store-dir=~/.pnpm-store

# Enable shamefully-hoist for better compatibility
shamefully-hoist=true

# Faster package resolution
resolution-mode=highest
